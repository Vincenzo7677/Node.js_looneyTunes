extends default

block header

block content
  div.profile
    div.profile-image(style=`background: url('/images/${figure.imgSrc}') top center
    no-repeat; background-size: cover;`)
    div.profile-details
      h1.profile-name
        | #{figure.firstname} #{figure.lastname}
      h2.profile-tagline
        | #{figure.tagline}
      p.profile-bio
        | #{figure.bio}
      a.button.button-link(href=`${figure.link}`)
        | Check my Profile